{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/taskly-backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/taskly-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/taskly-backend",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "boards": {
      "type": "application",
      "root": "apps/boards",
      "entryFile": "main",
      "sourceRoot": "apps/boards/src",
      "compilerOptions": {
        "tsConfigPath": "apps/boards/tsconfig.app.json"
      }
    },
    "chat": {
      "type": "application",
      "root": "apps/chat",
      "entryFile": "main",
      "sourceRoot": "apps/chat/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "taskly-backend": {
      "type": "application",
      "root": "apps/taskly-backend",
      "entryFile": "main",
      "sourceRoot": "apps/taskly-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/taskly-backend/tsconfig.app.json"
      }
    }
  }
}